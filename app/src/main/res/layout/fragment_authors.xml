<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@drawable/bg_bottom_nav"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_back_authors"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="6dp"
            android:padding="4dp"
            android:src="@drawable/ic_back" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Arbi21 Authors"
            android:textColor="@color/whiteColor"
            android:textSize="@dimen/sixteen_sp" />

        <View
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp" />

    </LinearLayout>

    <ImageView
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:layout_gravity="bottom|center_horizontal"
        android:src="@drawable/news_image" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Author Name"
        android:textColor="@color/purpleColor"
        android:textSize="@dimen/eighteen_sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="4dp"
        android:text="Ministry of IT and Telecommunication, PTA Test Zong 5G network"
        android:textColor="@color/grayColor"
        android:textSize="@dimen/twelve_sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_authors"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:overScrollMode="never"
        android:layout_marginHorizontal="10dp"
        tools:listitem="@layout/row_items_opinion_articles"/>

</LinearLayout>