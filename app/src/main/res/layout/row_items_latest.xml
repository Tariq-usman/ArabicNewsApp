<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/lightGrayColor"
        android:orientation="horizontal"
        android:paddingHorizontal="6dp">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <VideoView
                android:id="@+id/video_view"
                android:layout_width="120dp"
                android:layout_height="80dp" />

            <ImageButton
                android:id="@+id/btn_play"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_play_arrow"
                android:visibility="visible" />

            <ProgressBar
                android:id="@+id/items_progress_bar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:visibility="gone" />

        </FrameLayout>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="8dp"
            android:text="Ministry of IT and Telecommunication, PTA Test Zong 5G network"
            android:textColor="@color/grayColor"
            android:textSize="@dimen/fourteen_sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:gravity="right|center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="4dp"
            android:layout_weight="1"
            android:text="2 hrs ago"
            android:textColor="@color/grayColor"
            android:textSize="12dp" />

        <!--<ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_like_empty" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="4dp"
            android:text="123456"
            android:textColor="@color/grayColor"
            android:textSize="12dp" />-->

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_comment" />

        <TextView
            android:id="@+id/tv_msg_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="4dp"
            android:text="123456"
            android:textColor="@color/grayColor"
            android:textSize="12dp" />


        <ImageView
            android:id="@+id/iv_save"
            android:layout_width="20dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_saved_purple" />

        <ImageView
            android:id="@+id/share_latest_news"
            android:layout_width="20dp"
            android:layout_height="16dp"
            android:layout_marginHorizontal="4dp"
            android:src="@drawable/ic_share" />

    </LinearLayout>

</LinearLayout>